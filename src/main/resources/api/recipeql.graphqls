type Recipe {
    id: ID!,
    name: String!,
    description: String,
    durationFrom: Int,
    durationTo: Int
}

input BasicRecipeInput {
    name: String!,
    description: String = "",
    durationFrom: Int = 0,
    durationTo: Int = 1
}

extend type Mutation {
    createRecipe(input: BasicRecipeInput!): Recipe
    updateRecipe(id: ID, input: BasicRecipeInput!): Recipe
    deleteRecipe(id: ID): Boolean
}

extend type Query {
    recipe(id: ID): Recipe
}
